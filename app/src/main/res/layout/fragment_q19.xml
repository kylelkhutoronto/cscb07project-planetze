<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q19Fragment">

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/optionBacking"
        android:layout_width="290dp"
        android:layout_height="376dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/questionBacking"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/option_backing" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="212dp"
        android:layout_height="78dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/planetze_logo" />

    <ImageView
        android:id="@+id/questionBacking"
        android:layout_width="353dp"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:srcCompat="@drawable/question_backing" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/aqua"
        android:text="@string/next"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/optionBacking" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="329dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextButton"
        app:layout_constraintVertical_bias="0.0"
        android:max="105"
        android:progress="90" />

    <TextView
        android:id="@+id/question"
        android:layout_width="318dp"
        android:layout_height="64dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/q19"
        android:textColor="@color/aqua"
        app:layout_constraintBottom_toBottomOf="@+id/questionBacking"
        app:layout_constraintEnd_toEndOf="@+id/questionBacking"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/questionBacking"
        app:layout_constraintTop_toTopOf="@+id/questionBacking"
        app:layout_constraintVertical_bias="0.446" />

    <TextView
        android:id="@+id/noneSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/none_selected"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/optionBacking"
        app:layout_constraintEnd_toEndOf="@+id/optionBacking"
        app:layout_constraintStart_toStartOf="@+id/optionBacking"
        app:layout_constraintTop_toBottomOf="@+id/options"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/category"
        android:layout_width="175dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:text="@string/cat4"
        android:textSize="28sp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <RadioGroup
        android:id="@+id/options"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_marginTop="80dp"
        android:buttonTint="@color/darkblue"
        app:layout_constraintEnd_toEndOf="@+id/optionBacking"
        app:layout_constraintStart_toStartOf="@+id/optionBacking"
        app:layout_constraintTop_toTopOf="@+id/optionBacking">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/q19.1"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/q19.2"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/q19.3"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>